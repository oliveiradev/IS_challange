<div class="container">
    <div class="row">
        <div class="col-md-12">
          <% @courses.each do |course| %>
            <div class="col-md-4">
              <table class="table table-bordered table-striped">
                <thead>
                  <th colspan="2"><%= course.name%></th>
                </thead>
                <tbody>
                  <% course.students.each do |student|%>
                    <tr>
                      <td><%= student.name %></td>
                      <td><%= student.register_number %></td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          <%end%>
        </div>
    </div>
</div>